<% layout("./layouts/layout.eta") %>
<title>Shared shopping lists</title>

<h1>Shared shopping lists</h1>

<h4><a id ="link" href="/lists">Lists</a></h4>

<% if (it.lists == 0) { %>

<h2 id = "stat">No shopping lists yet.</h2>

<% } else { %>

<ul id = "stat">

<li>Shopping lists: <%= it.lists %></li>
<li>Shopping list items: <%= it.items%></li>

</ul>

<% } %>